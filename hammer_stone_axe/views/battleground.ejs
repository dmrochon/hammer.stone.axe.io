<% layout('/layout') %>

<h1><b>The Battleground</b></h1>
<div id="versus"></div>
<div class="container">
	<div class="row">
		<div id="player1Area" class="col-sm-4">
			<img id="crown1" src="/images/crown.png" height="30">
			<label id="showN" for="p1_name"><h3>Your Name</h3></label>

			<div class="input-group mb-3" id="p1_name_area">
			  <div class="input-group-prepend">
			    <button class="btn btn-outline-secondary" type="button" id="submit-p1">Enter</button>
			  </div>
			  
			  	<input id="p1_name" type="text" class="form-control" placeholder="enter your name" aria-label="Example text with button addon" aria-describedby="submit-p1" method="post"required>
			</div>
			
			<h4>Current Score:<div id="p1_Score"></div></h4>
			<h4>Choose Your Weapon!</h4>

				<img id="p1_hammer" src="/images/hammer.png" height="75">
				<img id="p1_stone" src="/images/stone.png" height="75">
				<img id="p1_axe" src="/images/axe.png" height="75">
		</div>

		<div id="resultArea" class="col-sm-4">
			<div ><h3>Good Luck!</h3>
				<img id="showGif" src="" height="245">
				<!-- <img src="/images/battle_gif.png"> -->
			</div>
			
		</div>

		<div id="cpuArea" class="col-sm-4">
			<img id="crown2" src="/images/crown.png" height="30">
			<label id="showCN" for="cpu_name"><h3>Challenger</h3></label>

				<div class="input-group mb-3" id="cpu_name_area">

			  <div class="input-group-prepend">
			    <button class="btn btn-outline-secondary" type="button" id="submit-cpu">Enter</button>
			  </div>
			  <input id="cpu_name" type="text" class="form-control" placeholder="enter your name" aria-label="Example text with button addon" aria-describedby="submit-cpu">
			</div>
			<h4>Current Score:<div id="cpu_Score"></div></h4>
			
			<h4>Choose Your Weapon!</h4>

				<img id="cpu_axe" src="/images/axe.png" height="75">
				<img id="cpu_stone" src="/images/stone.png" height="75">
				<img id="cpu_hammer" src="/images/hammer.png" height="75">
				

		</div>
	</div>
	<div class="row">
		<div class="col-sm-4">
			<div id="p1_choice_display"><h4></h4></div>
		</div>
		<div id="roundStuffs" class="col-sm-4">
			<div id="roundWinner"><h4></h4></div>
			<div id="victor"><h4></h4></div>
			
			<div id="playAgain">
				<button type="button" class="btn btn-outline-secondary" onClick = "window.location.reload();">Play another?</button>
				<button type="button" class="btn btn-outline-secondary"><a href="/p2_battleground">Battle Human?</a></button>
			</div>
		</div>
		<div class="col-sm-4">
			<div id="cpu_choice"><h4></h4></div>
		</div>
	</div>
	<div id="home" class="row">
		<div class="col-sm-12">
		<button  type="button" class="btn btn-outline-secondary"><a href="/">return home</a></button>
		</div>
	</div>
</div>
	
</body>

